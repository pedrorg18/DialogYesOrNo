<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogRootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rounded_corners"
    android:orientation="vertical"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/labelDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:gravity="center_horizontal"

        android:text="@string/message" />

    <Button
        android:id="@+id/buttonDialogOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/selector_btn_yellow_with_border"
        android:padding="0dp"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonDialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/selector_btn_yellow_with_border"
        android:padding="0dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>