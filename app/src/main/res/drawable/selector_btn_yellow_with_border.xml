<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>

            <corners android:radius="5dp" />

            <solid android:color="@color/blur_yellow" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>

            <corners android:radius="5dp" />

            <solid android:alpha="7" android:color="@color/blur_yellow" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>

            <corners android:radius="5dp" />

            <solid android:color="@color/dark_yellow" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape>
    </item>
    <item android:drawable="@color/dark_yellow">
        <shape>

            <corners android:radius="5dp" />

            <solid android:color="@color/dark_yellow" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape>
    </item>

</selector>